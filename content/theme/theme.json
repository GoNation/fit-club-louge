{
  "Button": {
    "fontWeight": "200",
    "textTransform": "none",
    "variants": {
      "variantName": "one",
      "bg": "red",
      "color": "orange",
      "borderColor": "red"
    }
  },
  "colors": {
    "primary": "#B52C2C",
    "secondary": "#B52C2C",
    "accent": "#B52C2C",
    "dark": "#111111",
    "light": "#F8F8F8",
    "background": "#F5E6D9"
  },
  "fonts": {
    "body": "Roboto, system-ui, sans-serif",
    "heading": "Roboto, system-ui, sans-serif",
    "links": "Roboto, system-ui, sans-serif",
    "accent": "Roboto, system-ui, sans-serif"
  },
  "styles": {
    "global": {
      "backgroundColor": "white"
    }
  },
  "buttons": {
    "baseStyle": {
      "textTransform": "uppercase"
    },
    "default": {
      "style": {
        "bg": "transparent",
        "borderColor": "dark",
        "borderStyle": "solid",
        "borderRadius": "none",
        "borderWidth": "1px"
      },
      "_hover": {
        "bg": "light",
        "color": "primary"
      }
    },
    "primary": {
      "style": {
        "bg": "primary",
        "color": "white",
        "borderColor": "primary",
        "borderStyle": "solid",
        "boxShadow": "lg",
        "borderWidth": "1px"
      },
      "typography": {
        "fontSize": "lg",
        "fontWeight": "normal",
        "letterSpacing": 1,
        "fontFamily": "body"
      },
      "layout": {
        "px": 12,
        "py": 8
      },
      "_hover": {
        "bg": "primary",
        "color": "white"
      }
    }
  },
  "modal": {
    "dialog": {
      "bg": "dark",
      "color": "white",
      "borderRadius": "0"
    },
    "dialogContainer": {
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "center"
    },
    "overlay": {
      "bg": "rgb(0, 0, 0)",
      "opacity": "0.7"
    }
  },
  "heading": {
    "baseStyle": {
      "fontWeight": "normal",
      "textTransform": "uppercase",
      "color": "primary"
    }
  }
}